{
  "author": "MATRIX Labs",
  "content_scripts": [
    {
      "css": ["css/extension.css"],
      "js": ["js/extension.js"]
    }
  ],
  "description": "MATRIX adapter add-on for Mozilla WebThings Gateway",
  "gateway_specific_settings": {
    "webthings": {
      "exec": "{nodeLoader} {path}",
      "primary_type": "adapter",
      "strict_max_version": "*",
      "strict_min_version": "0.0.1"
    }
  },
  "homepage_url": "https://github.com/matrix-io",
  "id": "matrix-adapter",
  "license": "MPL-2.0",
  "manifest_version": 1,
  "name": "MATRIX Adapter",
  "short_name": "MATRIX",
  "version": "0.0.1",
  "web_accessible_resources": ["css/*.css", "js/*.js", "views/*.html"]
}
