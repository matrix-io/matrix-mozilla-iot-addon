{
  "name": "matrix-mozilla-iot-adapter",
  "display_name": "Example Adapter",
  "version": "0.6.0",
  "description": "MATRIX adapter add-on for Mozilla WebThings Gateway",
  "author": "Mozilla IoT",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "load": "sudo systemctl restart mozilla-iot-gateway.service"
  },
  "keywords": [
    "mozilla",
    "iot",
    "adapter"
  ],
  "homepage": "https://github.com/matrix-io/matrix-mozilla-iot-adapter",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/matrix-io/matrix-mozilla-iot-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/matrix-io/matrix-mozilla-iot-adapter/issues"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "eslint": "^6.4.0"
  },
  "files": [
    "LICENSE",
    "README.md",
    "SHA256SUMS",
    "css",
    "example-adapter.js",
    "example-api-handler.js",
    "index.js",
    "js",
    "manifest.json",
    "views"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "type": "adapter",
    "plugin": true,
    "exec": "{nodeLoader} {path}"
  }
}
